<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/s1">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visitor Pre-Registration"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="24dp" />

        <EditText
            android:id="@+id/etVisitorName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Visitor Name"
            android:inputType="textPersonName"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:textColorHint="#373030" />

        <EditText
            android:id="@+id/etPurpose"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Purpose"
            android:textColor="#000000"
            android:inputType="text"
            android:paddingStart="16dp"
            android:textColorHint="#373030"
            android:paddingEnd="16dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            android:paddingStart="16dp"
            android:textColorHint="#373030"
            android:paddingEnd="16dp" />

        <EditText
            android:id="@+id/etVehicleNumber"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Vehicle Number"
            android:inputType="text"
            android:paddingStart="16dp"
            android:textColorHint="#373030"
            android:paddingEnd="16dp" />

        <EditText
            android:id="@+id/etNoOfMembers"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Number of Members"
            android:inputType="number"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:textColorHint="#373030"
            android:paddingEnd="16dp" />

        <EditText
            android:id="@+id/tvdate"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_edittext"
            android:hint="Date (mm-dd-yyyy)"
            android:textColorHint="#373030"
            android:inputType="text"
            android:paddingStart="16dp"
            android:textColor="#000000"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:text="Select Start Time"
            android:textColorHint="#373030"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:text="Select End Time"
            android:textColorHint="#757575"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnCheckSlot"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#303F9F"
            android:text="Check Slot Availability"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#1A237E"
            android:text="Submit Pre-Registration"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>
